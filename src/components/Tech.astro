---
const technologies: string[] = [
  "Next",
  "Remix",
  "Astro",
  ".NET Core",
  "Spring",
  "Angular",
  "React",
  "Typescript",
  "Javascript",
  "C++",
  "Docker",
  "Figma",
];
---

<section
  class="mx-auto container min-h-screen flex flex-col items-stretch justify-center"
>
  <h1
    class="text-lg md:text-2xl uppercase tracking-widest border-b border-zinc-700 pb-4"
  >
    Technologies I work with
  </h1>
  <ul
    class="gap-x-32 gap-y-8 pt-8 flex items-center flex-wrap grid grid-cols-1 md:grid-cols-4 text-2xl md:text-5xl font-head uppercase font-bold"
  >
    {technologies.map((tech) => <li>{tech}</li>)}
  </ul>
</section>
